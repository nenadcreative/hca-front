---
import Container from "../layouts/Container.astro";
import { Image } from "astro:assets";
import logo from "../assets/logo.svg";
import fetchApi from "../lib/strapi";

const menuquery = `menus?nested&populate=*`;

const menus: any = await fetchApi({
  endpoint: menuquery,
  wrappedByKey: "data", // the key to unwrap the response
});

const headerMenu = menus.filter((menu) => menu.id === 2)[0];

const footerLinks = menus.filter((menu) => menu.id === 3)[0].attributes.items
  .data;
const legalLinks = menus.filter((menu) => menu.id === 4)[0].attributes.items
  .data;

const date = new Date();
const year = date.getFullYear();
