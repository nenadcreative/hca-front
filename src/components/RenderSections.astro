---
import HomeHero from "../sections/HomeHero.astro";
import Hero from "../sections/Hero.astro";
import FeatureImageCollage from "../sections/FeatureImageCollage.astro";
import FeatureImage from "../sections/FeatureImage.astro";
import CTA2 from "../sections/CTA2.astro";
import CTA from "../sections/CTA.astro";
import CTAContact from "../sections/CTAContact.astro";
import List from "../sections/List.astro";
import ProgramTableSimple from "../sections/ProgramTableSimple.astro";
import FeatureCenteredCard from "../sections/FeatureCenteredCard.astro";
import OurPrograms from "../sections/OurPrograms.astro";

const { content } = Astro.props;
---

{
  content &&
    content.map((section) => {
      console.log(section);
      switch (section.__component) {
        case "sections.home-hero":
          return <HomeHero content={section} />;
        case "sections.hero":
          return <Hero content={section} />;
        case "sections.feature-image-collage":
          return <FeatureImageCollage content={section} />;
        case "sections.feature-image":
          return <FeatureImage content={section} />;
        case "sections.cta":
          return <CTA content={section} />;
        case "sections.cta-2":
          return <CTA2 content={section} />;
        case "sections.cta-contact":
          return <CTAContact content={section} />;
        case "sections.list":
          return <List content={section} />;
        case "sections.program-table-simple":
          return <ProgramTableSimple content={section} />;
        case "sections.feature-centered-card":
          return <FeatureCenteredCard content={section} />;
        case "sections.our-programs":
          return <OurPrograms content={section} />;
        default:
          return null;
      }
    })
}
