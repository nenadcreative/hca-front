---
import Container from "../layouts/Container.astro";
import { BlocksRenderer } from "@strapi/blocks-react-renderer";

const { content } = Astro.props;

const bg = content.background;

const backgrounds = {
  gray: "bg-gray",
  white: "bg-white",
};

console.log(content);
---

<section class=` ${backgrounds[bg]}`>
  <Container classes=" py-24 relative">
    <div class="max-w-[800px] mx-auto text-center">
      {
        content.tagline && (
          <p class="mb-2 tagline text-brand-blue">{content.tagline}</p>
        )
      }
      <h2 class="mb-5">{content.title}</h2>
      {content.description && <BlocksRenderer content={content.description} />}
    </div>
    <!--Desktop and tablet table -->
    <div
      class="overflow-hidden rounded-lg outline outline-1 outline-brand-blue max-w-[940px] mx-auto"
    >
      <table class="w-full">
        <tr>
          <td class={`w-1/4 bg-gray px-4 font-semibold text-center py-6`}> </td>
          <td class={`w-1/4 px-4 bg-gray font-semibold text-center py-6`}>
            {content.tableCol1Title}
          </td>
          <td class={`w-1/4 px-4 bg-gray font-semibold text-center py-6`}>
            {content.tableCol2Title}
          </td>
          <td class={`w-1/4 px-4 bg-gray font-semibold text-center py-6`}>
            {content.tableCol3Title}
          </td>
        </tr>
      </table>
      {
        content.table.map((row) => (
          <table class=" w-full">
            <tr>
              <td class={`w-1/4 bg-gray px-4 font-semibold text-center py-6`}>
                {row.title}
              </td>
              <td class={`w-1/4 px-4 font-semibold text-center py-6 bg-white`}>
                {row.value1}
              </td>
              <td class={`w-1/4 px-4 font-semibold text-center py-6 bg-white`}>
                {row.value2}
              </td>
              <td class={`w-1/4 px-4 font-semibold text-center py-6 bg-white`}>
                {row.value3}
              </td>
            </tr>
          </table>
        ))
      }
    </div>
    <!-- end of Desktop and tablet table -->

    <div class="bg-brand-blue w-[250px] h-6 absolute top-0 right-0"></div>
    <div class="bg-brand-yellow w-[250px] h-6 absolute bottom-0 right-0"></div>
  </Container>
</section>
