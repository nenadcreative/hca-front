---
import Container from "../layouts/Container.astro";
const { content } = Astro.props;
import { BlocksRenderer } from "@strapi/blocks-react-renderer";
import ButtonLink from "../components/ButtonLink.astro";
import { Image } from "astro:assets";

const layout = content.layout;
const layouts = {
  "image-content": "sm:flex-row ",
  "content-image": "sm:flex-row-reverse",
};

console.log(content);

const bg = content.background;

const backgrounds = {
  gray: "bg-gray",
  white: "bg-white",
};
---

<section class=`${backgrounds[bg]} py-24 bg-section-bg bg-cover bg-no-repeat	`>
  <Container>
    <div
      class=`flex flex-col gap-8  ${layouts[layout]}`
    >
      <div
        class="w-full relative  md:w-1/2 xl:overflow-hidden xl:rounded-lg"
      >
      <Image
      src={content.image.data.attributes.url}
      
      inferSize
      alt={content.title}
      class="w-full h-full absolute top-0 right-0 object-cover object-top rounded-lg"
    />
      </div>

      <div
        class="w-full md:w-1/2 flex items-center  "
      >
      <div class="h-fit rounded-lg shadow-lg bg-white md:py-16 py-8 md:px-8 px-4"> <p class="mb-4 tagline text-dark-1">{content.tagline}</p>
        <h2 class="mb-4 text-brand-blue">{content.title}</h2>
        <div class="mb-9"><BlocksRenderer content={content.description} /></div>

        {
          content.button && (
            <div class="mt-6">
              <ButtonLink
                button={content.button}
                target={content.button.target}
                variant="secondary"
              />
            </div>
          )
        }</div>
       
      </div>
    </div>
  </Container>
</section>
