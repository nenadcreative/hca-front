---
import Container from "../layouts/Container.astro";
import { BlocksRenderer } from "@strapi/blocks-react-renderer";
import ButtonLink from "../components/ButtonLink.astro";

const { content } = Astro.props;

const bg = content.background;

const backgrounds = {
  gray: "bg-gray",
  white: "bg-white",
};

console.log(content);
---

<section
  class={`${backgrounds[bg]} bg-cover bg-no-repeat pb-24 pt-20 ${content.background === "white" ? "bg-feature-bg" : ""}`}
>
  <Container>
    <div class="text-center mb-14 mx-auto max-w-[800px]">
      {
        content.tagline && (
          <p class="mb-2 tagline text-brand-blue">{content.tagline}</p>
        )
      }
      <h2>{content.title}</h2>
      {
        content.description && (
          <div class=" mt-5">
            <BlocksRenderer content={content.description} />
          </div>
        )
      }
    </div>
    <div class="flex flex-col gap-10 lg:flex-row justify-between">
      {
        content.Card.map((card, index) => (
          <div class=" lg:w-1/2 w-full py-8 md:py-16 px-5 md:px-10 shadow-lg bg-white rounded-lg">
            <div class=" mb-5 flex flex-col sm:flex-row gap-3 items-start sm:items-center lg:items-start">
              <div class=" w-[30px] h-[42px]">
                {" "}
                {index === 0 ? (
                  <svg
